<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container mt-3">
  <h2 class="text-center">USER</h2>
  <div class="container text-end mb-3" >
    <img src="https://i.pinimg.com/originals/79/50/d1/7950d19e978edae319bc587877db792b.jpg" class="d-block mx-auto" alt="Image"  style="max-width: 150px; height: auto;">
  </div>
  <div class="input-group">
    <form action="/search" method="get" class="d-flex">
      <input type="search" class="form-control" id="form1" name="search" placeholder="Search..." style="margin-left: 65em;"/>
    <button type="submit" class="btn btn-primary">
      <i class="bi bi-search"></i>
    </button>
    </form>
  </div>
  <table class="table">
    <a href="/add" class="btn btn-success mt-3">Add</a>
    <thead>
      <tr class="table-dark text-center">
        <th>ID</th>
        <th>Image</th>
        <th>UserName</th>
        <th>FullName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% users.forEach((user,index) => { %>
     <tr class="text-center">
      <td><%= index+1 %></td>
      <td><img src="<%= user.image %>" width="50" alt=""></td>
      <td><%= user.userName%></td>
      <td><%= user.fullName%></td>
      <td><%= user.address %></td>
      <td>
        <a href="/edit/<%= user._id %>" class="text-primary"><i class="bi bi-pencil-square"></i></a>
        <a href="/api/delete/<%= user._id %>" class="text-danger delete-user"><i class="bi bi-trash3"></i></a>
      </td>
     </tr>
    <% }) %>
      
    </tbody>
  </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script>
      $('.delete-user').click(function (e) {
        let clickOne = $(this);
        let url = $(this).attr('href');
        $.ajax({
          type:'delete',
          url:url,
          success: function (response) {
            clickOne.parent().parent().hide();
          }
        })
        e.preventDefault();
      })
</script>
</body>
</html>
