<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div style="text-align: center;">
        <h5>List Users</h5>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                  <th>ID</th>
                  <th>Username</th>
                  <th>Full name</th>
                  <th>Address</th>
                  <th>Function</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(user) { %>
                <tr>
                  <td><%= user.userId %></td>
                  <td><%= user.username %></td>
                  <td><%= user.fullname %></td>
                  <td><%= user.address %></td>
                  <td>
                    <button name="delete">
                      Delete
                    </button>
                  </td>
                </tr>
                <% }); %>
              </tbody>
        </table>
    </div>
    <div style="text-align: center;">
        <h5>Add User</h5>
        <form id="addUser" style="text-align: center;" >
            <table>
                <tr>
                    <td><input type="text" name="userId" placeholder="UserID" required></td>
                </tr>
                <tr>
                    <td><input type="text" name="username" placeholder="Username" required></td>
                </tr>
                <tr>
                    <td><input type="text" name="fullname" placeholder="Fullname" required></td>
                </tr>
                <tr>
                    <td><input type="text" name="address" placeholder="Address" required></td>
                </tr>
                <tr>
                    <td><button type="submit">Add User</button></td>
                </tr>
            </table>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFY
    lzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
        $("#addUser").submit(function (event) {
          event.preventDefault();
            const formData = $(this).serialize();
          $.ajax({
            url: "/post",
            method: "POST",
            data: formData,
            success: function () {
              location.reload();
            },
          });
        });
    </script>
    
</body>
</html>